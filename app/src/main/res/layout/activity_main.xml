<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:textAlignment="center"
    android:layout_centerInParent="true" >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/main_coordinates"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:text="Coordinates: "
        android:textStyle="bold" />

    <TextView
        android:id="@+id/main_coordinates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textAlignment="center" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@+id/main_coordinates"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#D3D3D3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/main_coordinates"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"
        android:text="Address: "
        android:textStyle="bold" />

    <TextView
        android:id="@+id/main_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="95dp"
        android:layout_marginRight="20dp"
        android:textAlignment="center" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@+id/main_address"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#D3D3D3"/>

    <ImageView
        android:id="@+id/main_mapicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/mapicon"
        android:scaleType="fitXY"        
        android:layout_marginTop="125dp"
        android:layout_marginBottom="55dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <Button
        android:id="@+id/main_checkin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/main_mapicon"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="30dp"
        android:text="Check In" />

    <Switch
        android:id="@+id/main_checkinswitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/main_mapicon"
        android:layout_alignLeft="@+id/main_checkin"
        android:layout_marginLeft="-50dp"
        android:layout_marginBottom="-45dp"/>

    <ImageView
        android:id="@+id/main_infoicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/infoicon"
        android:scaleType="fitXY"
        android:layout_alignBottom="@+id/main_mapicon"
        android:layout_alignRight="@+id/main_checkin"
        android:layout_marginRight="-30dp"
        android:layout_marginBottom="-45dp"/>

</RelativeLayout>